{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run C++",
			"type": "shell",
			"command": "g++ '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}'",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"problemMatcher": "$gcc"
		}
	]
}